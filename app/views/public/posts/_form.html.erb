<div class="card">
  <div class="card-body">
    <h2 class="d-flex justify-content-center my-3"><%= post.new_record? ? "新規投稿" : "投稿の編集" %></h2>
    <%= form_with model: post do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
    
      <div class="mb-2">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="mb-2">
        <%= f.label :content %>
        <%= f.text_area :content, row: 5, class: "form-control" %>
      </div>
      
      <div class="mb-2">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
    
      <div class="my-4">
        <%= f.submit (post.new_record? ? "投稿する" : "編集する"), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
