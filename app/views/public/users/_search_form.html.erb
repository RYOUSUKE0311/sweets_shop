<div class="my-4">
  <%= form_with url: url, method: :get do |f| %>
    <div class="row">
      <div class="col-md-9">
        <%= f.search_field :keyword, value: params[:keyword], placeholder: "名前で検索", class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.submit "検索する", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>