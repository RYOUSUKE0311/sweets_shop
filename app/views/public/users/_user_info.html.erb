<table class="table">
  <tbody>
    <tr>
      <th><%= t "activerecord.attributes.user.name" %></th>
      <td><%= user.name %></td>
    </tr>
  </tbody>
</table>

<%= link_to "ユーザーページ", user_path(user), class: "btn btn-outline-primary btn-block" %>
<%= link_to "お気に入り一覧", favorites_user_path(user), class: "btn btn-outline-primary btn-block" %>
<%= link_to "フォローしている人一覧", followings_user_path(user), class: "btn btn-outline-primary btn-block" %>
<%= link_to "フォローされた人一覧", followers_user_path(user), class: "btn btn-outline-primary btn-block" %>

<div class="my-4">
  <% if current_user && current_user != user %>
    <%= render "public/relationships/follow_button", user: user %>
  <% elsif current_user && current_user == user %>
    <%= link_to "退会する", user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-block" %>
  <% end %>
</div>

